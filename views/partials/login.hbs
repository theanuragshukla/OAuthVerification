<h1>Login</h1>
<div class="error"></div>
<form>
	<div class="form-item">
		<label for="email"></label>
		<input type="email" name="email" id='email' required="required" placeholder="Email" autocomplete='false'></input>
	</div>
	<div data-error = "email" class="errorMsg">
		{{>error}}	
		<span>enter a valid Email</span>
	</div>

	<div class="form-item">
		<label for="pass"></label>
		<input type="password" name="pass" id='pass' required="required" placeholder="Password" autocomplete='false'></input>
	</div>
	<div data-error = "pass" class="errorMsg">
		{{>error}}	
		<span>Incorrect password. Try again</span>
	</div>

	<div class="button-panel">
		<input type="button" class="button" onclick="login(this)" title="Sign In" value="Sign In"></input>
	</div>
</form>
<div class="form-footer">
	<p><a onclick="(()=>{
		  const qs = window.location.href.split('?')[1];
		  location.href=`/auth/signup${qs ? '?'+qs:''}`
		  })()">New User? Register</a></p>
</div>
